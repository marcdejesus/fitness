{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./apps/web/*"]
    }
  },
  "include": [
    "apps/web/**/*.ts",
    "apps/web/**/*.tsx",
    "cypress/**/*.ts",
    "cypress/**/*.tsx"
  ],
  "exclude": ["node_modules"]
} 